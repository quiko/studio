
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow any authenticated user to read user profiles (e.g., for contact names, avatars in messages)
      allow read: if request.auth != null;
      // User can create their own profile document
      allow create: if request.auth != null && request.auth.uid == userId;
      // User can update their own profile document
      allow update: if request.auth != null && request.auth.uid == userId;
      // Deleting user documents is typically an administrative action or handled with specific logic
      allow delete: if false;
    }

    match /conversations/{conversationId} {
      // A user can read or update a conversation document if their UID is in the 'participants' array.
      allow read, update: if request.auth != null && request.auth.uid in resource.data.participants;
      // A user can create a conversation document if:
      // 1. They are authenticated.
      // 2. Their UID is included in the 'participants' array of the new document.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;
      // Deleting conversations might be restricted or allowed based on specific app logic
      allow delete: if false; // For now, disallow direct deletion by users.

      match /messages/{messageId} {
        // A user can read messages if they are a participant of the parent conversation.
        allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        // A user can create (send) a message if:
        // 1. They are authenticated.
        // 2. Their UID matches the 'senderId' in the new message document.
        // 3. Their UID is in the 'participants' list of the parent conversation document.
        allow create: if request.auth != null &&
                         request.auth.uid == request.resource.data.senderId &&
                         request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        // Generally, disallow updating or deleting messages to maintain chat integrity and history.
        allow update, delete: if false;
      }
    }
    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
